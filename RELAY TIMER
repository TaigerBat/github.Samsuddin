import RPi.GPIO as GPIO
import time

# Pin configuration
GREEN_LED = 17  # GPIO17 = Pin 11
RED_LED = 27    # GPIO27 = Pin 13

# Setup GPIO
GPIO.setmode(GPIO.BCM)
GPIO.setup(GREEN_LED, GPIO.OUT)
GPIO.setup(RED_LED, GPIO.OUT)

def on_off_timer():
    try:
        step = 1
        while True:
            # Turn on Green, turn off Red
            GPIO.output(GREEN_LED, GPIO.HIGH)
            GPIO.output(RED_LED, GPIO.LOW)
            print(f"Step {step}: ðŸŸ¢ GREEN LED ON")
            time.sleep(1)

            # Turn on Red, turn off Green
            GPIO.output(GREEN_LED, GPIO.LOW)
            GPIO.output(RED_LED, GPIO.HIGH)
            print(f"Step {step+1}: ðŸ”´ RED LED ON")
            time.sleep(1)

            step += 2  # Two steps per full ON/OFF cycle

    except KeyboardInterrupt:
        print("\nProgram stopped by user.")

    finally:
        GPIO.cleanup()
        print("GPIO cleaned up.")

# Run the timer
on_off_timer()
